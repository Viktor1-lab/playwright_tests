name: Run autotests
on:
  workflow_dispatch:
    inputs:
      deployment_target:
        type: choice
        description: select 
        required: true
        default: all
        options:
          - create_account
          - eco_findly
          - sale_pages
          - all


permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  run-tests:
    runs-on: ubuntu-latest
